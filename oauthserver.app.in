{application, oauthserver,
[
	{description, "OAuth Server Framework"},
	{vsn, "0.1"},
	{modules, [ MODULES ] },
	{registered,
		[
		]
	},

	% Applications to be *started* before starting this application. Note
	% that is does NOT automatically start these applications; it's only
	% dependency listing.
	{applications, [crypto]},

	% Applications to be *loaded* before starting the application.
	{included_applications, [yaws]},

	{mod, {oauthserver_app, []}},

	{env,
		[
			{doc_root,		"/tmp/empty"},
			{ip,			{0, 0, 0, 0}},
			{callback_module,	{dummy_server, unused_arg}},
			{port,			9006},
			{server_name,		"tiger.xiolabs.com"}
		]
	}
]}.

